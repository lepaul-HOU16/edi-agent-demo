[flake8]
max-line-length = 100
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long
    W503,  # line break before binary operator
    F401,  # module imported but unused
    E402,  # module level import not at top of file
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    node_modules,
    .next
per-file-ignores =
    scripts/*.py: E501, F401, E402
