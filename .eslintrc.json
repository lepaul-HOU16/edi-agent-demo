{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "indent": "off",
    "quotes": "off",
    "semi": "off",
    "no-trailing-spaces": "off",
    "quote-props": "off",
    "curly": "off",
    "react-hooks/rules-of-hooks": "warn"
  }
}
