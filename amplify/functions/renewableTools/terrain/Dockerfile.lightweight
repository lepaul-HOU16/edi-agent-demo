# Lightweight AWS Lambda Python 3.12 container
# NO heavy visualization dependencies
FROM public.ecr.aws/lambda/python:3.12

# Copy lightweight requirements
COPY terrain/requirements_lightweight.txt ${LAMBDA_TASK_ROOT}/requirements.txt
RUN pip3 install -r ${LAMBDA_TASK_ROOT}/requirements.txt --target "${LAMBDA_TASK_ROOT}"

# Copy lightweight handler
COPY terrain/handler_lightweight.py ${LAMBDA_TASK_ROOT}/handler.py

# Set the CMD to handler
CMD [ "handler.handler" ]
